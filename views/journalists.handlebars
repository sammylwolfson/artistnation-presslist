 <div class="container">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2><b>Manage Journalists</b></h2>
						</div>
						<div class="col-xs-6">					
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th id="sort-first-name">First Name</th>
							<th id="sort-last-name">Last Name</th>
							<th id="sort-company">Company</th>
							<th id="sort-email">Email</th>
							<th id="sort-city">City</th>
                             <th id="sort-date-added">Date Added</th>
						</tr>
					</thead>
					
                {{#if journalists}}
                  {{#each journalists as |journalist|}}
                <tbody>
							<tr>
								</span>
							</td>
							<td>{{journalist.first_name}}</td>
							<td>{{journalist.last_name}}</td>
							<td>{{journalist.company}}</td>
                            <td><a href="mailto:{{journalist.email}}">{{journalist.email}}</a></td>
							<td>{{journalist.city}}</td>
                            <td>{{format_date journalist.created_at}}</td>
							<td>
								<a href="/journalist/{{journalist.id}}" class="edit"><i class="material-icons">&#xE254;</i></a>
							</tr>
                </tbody>
                 {{/each}}
        </table>
      </div>
            <a class="btn" href="mailto:?bcc={{#each journalists as |journalist|}} {{journalist.email}},{{/each}}">Email All Journalist</a>
                  {{else}}
                    <div class="row justify-content-center">
                    <h2 class="col-6 my-5">No journalist found matching this criteria.</h2>
                    </div>
                {{/if}}
</div>
<script src="/javascript/sort.js"></script>