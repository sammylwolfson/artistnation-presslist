<div class="table-wrapper">
	<div class="table-title title">
		<div class="row">
			<div class="col-xs-6">
				{{#if search}}
					<h2><b>Search Results</b></h2>
				{{else}}
					<h2><b>Manage Journalists</b></h2>
				{{/if}}
			</div>
		</div>
	</div>
	{{#if journalists}}
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Company</th>
				<th>Email</th>
				<th>City</th>
					<th>Date Added</th>
			</tr>
		</thead>
		<tbody>
			{{#each journalists as |journalist|}}
				<tr>
					<td>{{journalist.first_name}}</td>
					<td>{{journalist.last_name}}</td>
					<td>{{journalist.company}}</td>
					<td><a href="mailto:{{journalist.email}}">{{journalist.email}}</a></td>
					<td>{{journalist.city}}</td>
					<td>{{format_date journalist.created_at}}</td>
					<td>
						<a href="/edit/journalist/{{journalist.id}}" class="edit"><i class="material-icons">&#xE254;</i></a>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>
{{else}}
<div class="row justify-content-center ms-5">
	<h2 class="col-6 my-5">No journalist found matching this criteria.</h2>
</div>
<div class="row justify-content-center">
	<a href="/" class="btn-back text-light me-5">Back To Search</a>
</div>
{{/if}}
